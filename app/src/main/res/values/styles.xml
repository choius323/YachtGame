<resources>

    <style name="Widget.Theme.YachtGame.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.YachtGame.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="TableStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginVertical">1dp</item>
        <item name="android:layout_marginHorizontal">1dp</item>
        <item name="android:background">@color/table_background</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="StartPageButton" parent="">
        <item name="android:paddingVertical">10dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>

